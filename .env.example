# Singaporean-Accent TTS MVP - Environment Variables Template
# Copy this file to .env and customize the values for your setup
# NEVER commit the actual .env file to version control

# ============================================================================
# PROJECT PATHS AND DIRECTORIES
# ============================================================================

# Base data directory (relative to project root)
ACCENT_TTS_DATA_DIR=./data

# Model storage directory
ACCENT_TTS_MODEL_DIR=./models

# Output directory for generated audio
ACCENT_TTS_OUTPUT_DIR=./outputs

# Temporary files directory
ACCENT_TTS_TEMP_DIR=./tmp

# Log files directory
ACCENT_TTS_LOG_DIR=./logs

# Configuration files directory
ACCENT_TTS_CONFIG_DIR=./config

# ============================================================================
# DEVICE AND PERFORMANCE SETTINGS
# ============================================================================

# Device selection: "auto", "cuda", "mps", "cpu"
# "auto" will detect GPU availability automatically
ACCENT_TTS_DEVICE=auto

# Enable low memory mode (reduces memory usage at cost of speed)
ACCENT_TTS_LOW_MEMORY=false

# Batch size for processing (reduce if running out of memory)
ACCENT_TTS_BATCH_SIZE=1

# Number of CPU threads for audio processing
ACCENT_TTS_NUM_THREADS=4

# Maximum GPU memory usage (in GB, 0 for unlimited)
ACCENT_TTS_MAX_GPU_MEMORY=0

# ============================================================================
# AUDIO PROCESSING SETTINGS
# ============================================================================

# Target sample rate for processed audio (Hz)
ACCENT_TTS_SAMPLE_RATE=16000

# Target loudness normalization (LUFS)
ACCENT_TTS_TARGET_LOUDNESS=-23

# Maximum audio file length (seconds)
ACCENT_TTS_MAX_AUDIO_LENGTH=300

# Minimum audio segment length (seconds)
ACCENT_TTS_MIN_SEGMENT_LENGTH=1

# Maximum audio segment length (seconds)
ACCENT_TTS_MAX_SEGMENT_LENGTH=10

# Audio quality threshold (0.0-1.0, higher = stricter)
ACCENT_TTS_QUALITY_THRESHOLD=0.7

# Enable audio normalization
ACCENT_TTS_NORMALIZE_AUDIO=true

# Enable silence removal
ACCENT_TTS_REMOVE_SILENCE=true

# ============================================================================
# TTS MODEL SETTINGS
# ============================================================================

# Default TTS engine: "xtts" or "tortoise"
ACCENT_TTS_DEFAULT_ENGINE=xtts

# XTTS model path (relative to MODEL_DIR or absolute)
ACCENT_TTS_XTTS_MODEL_PATH=xtts_v2

# Tortoise model path (relative to MODEL_DIR or absolute)
ACCENT_TTS_TORTOISE_MODEL_PATH=tortoise

# Default temperature for generation (0.1-1.0)
ACCENT_TTS_DEFAULT_TEMPERATURE=0.7

# Default seed for reproducible generation (0 for random)
ACCENT_TTS_DEFAULT_SEED=0

# Minimum number of reference clips for speaker embedding
ACCENT_TTS_MIN_REFERENCE_CLIPS=3

# Maximum number of reference clips to use
ACCENT_TTS_MAX_REFERENCE_CLIPS=10

# ============================================================================
# WHISPER TRANSCRIPTION SETTINGS
# ============================================================================

# Whisper model size: "tiny", "base", "small", "medium", "large"
ACCENT_TTS_WHISPER_MODEL=small.en

# Language for transcription (use "en" for English)
ACCENT_TTS_WHISPER_LANGUAGE=en

# Enable word-level timestamps
ACCENT_TTS_WHISPER_WORD_TIMESTAMPS=true

# Confidence threshold for transcription (0.0-1.0)
ACCENT_TTS_WHISPER_CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# WEB INTERFACE SETTINGS
# ============================================================================

# Gradio server host (use "0.0.0.0" to allow external connections)
ACCENT_TTS_HOST=127.0.0.1

# Gradio server port
ACCENT_TTS_PORT=7860

# Enable Gradio sharing (creates public URL)
ACCENT_TTS_SHARE=false

# Enable authentication (set username:password)
ACCENT_TTS_AUTH=

# Maximum concurrent users
ACCENT_TTS_MAX_USERS=10

# Session timeout (minutes)
ACCENT_TTS_SESSION_TIMEOUT=30

# ============================================================================
# LOGGING AND DEBUGGING
# ============================================================================

# Log level: "DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"
ACCENT_TTS_LOG_LEVEL=INFO

# Enable file logging
ACCENT_TTS_LOG_TO_FILE=true

# Log file rotation size (MB)
ACCENT_TTS_LOG_MAX_SIZE=10

# Number of log files to keep
ACCENT_TTS_LOG_BACKUP_COUNT=5

# Enable console logging
ACCENT_TTS_LOG_TO_CONSOLE=true

# Enable detailed timing logs
ACCENT_TTS_LOG_TIMING=false

# Enable memory usage logging
ACCENT_TTS_LOG_MEMORY=false

# ============================================================================
# CACHE AND STORAGE SETTINGS
# ============================================================================

# Enable model caching
ACCENT_TTS_CACHE_MODELS=true

# Cache directory
ACCENT_TTS_CACHE_DIR=./.cache

# Maximum cache size (GB)
ACCENT_TTS_MAX_CACHE_SIZE=5

# Cache expiration time (hours)
ACCENT_TTS_CACHE_EXPIRY=24

# Enable audio file caching
ACCENT_TTS_CACHE_AUDIO=true

# ============================================================================
# SECURITY AND PRIVACY SETTINGS
# ============================================================================

# Enable secure mode (additional validation and sanitization)
ACCENT_TTS_SECURE_MODE=true

# Maximum file upload size (MB)
ACCENT_TTS_MAX_UPLOAD_SIZE=100

# Allowed audio file extensions (comma-separated)
ACCENT_TTS_ALLOWED_EXTENSIONS=wav,mp3,ogg,flac

# Enable input sanitization
ACCENT_TTS_SANITIZE_INPUT=true

# Maximum text input length (characters)
ACCENT_TTS_MAX_TEXT_LENGTH=1000

# Enable rate limiting
ACCENT_TTS_RATE_LIMIT=true

# Rate limit: requests per minute
ACCENT_TTS_RATE_LIMIT_RPM=60

# ============================================================================
# DEVELOPMENT AND TESTING SETTINGS
# ============================================================================

# Enable development mode (more verbose logging, debug features)
ACCENT_TTS_DEV_MODE=false

# Enable profiling
ACCENT_TTS_PROFILE=false

# Enable automatic model downloads
ACCENT_TTS_AUTO_DOWNLOAD_MODELS=true

# Model download timeout (seconds)
ACCENT_TTS_DOWNLOAD_TIMEOUT=300

# Enable experimental features
ACCENT_TTS_EXPERIMENTAL=false

# Test data directory
ACCENT_TTS_TEST_DATA_DIR=./tests/data

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Custom model URLs (for downloading models)
ACCENT_TTS_XTTS_MODEL_URL=
ACCENT_TTS_TORTOISE_MODEL_URL=

# Custom configuration file path
ACCENT_TTS_CONFIG_FILE=

# Enable multi-GPU support
ACCENT_TTS_MULTI_GPU=false

# GPU device IDs (comma-separated, e.g., "0,1,2")
ACCENT_TTS_GPU_DEVICES=0

# Enable mixed precision training/inference
ACCENT_TTS_MIXED_PRECISION=false

# Custom Python path for models
ACCENT_TTS_PYTHON_PATH=

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# Example: High-performance setup with GPU
# ACCENT_TTS_DEVICE=cuda
# ACCENT_TTS_BATCH_SIZE=4
# ACCENT_TTS_LOW_MEMORY=false
# ACCENT_TTS_CACHE_MODELS=true

# Example: Low-memory CPU setup
# ACCENT_TTS_DEVICE=cpu
# ACCENT_TTS_BATCH_SIZE=1
# ACCENT_TTS_LOW_MEMORY=true
# ACCENT_TTS_WHISPER_MODEL=tiny

# Example: Development setup
# ACCENT_TTS_DEV_MODE=true
# ACCENT_TTS_LOG_LEVEL=DEBUG
# ACCENT_TTS_LOG_TIMING=true
# ACCENT_TTS_PROFILE=true

# Example: Production setup
# ACCENT_TTS_HOST=0.0.0.0
# ACCENT_TTS_SECURE_MODE=true
# ACCENT_TTS_RATE_LIMIT=true
# ACCENT_TTS_LOG_LEVEL=WARNING

# ============================================================================
# USAGE INSTRUCTIONS
# ============================================================================

# 1. Copy this file to .env:
#    cp .env.example .env

# 2. Customize the values for your setup:
#    - Set ACCENT_TTS_DEVICE based on your hardware
#    - Adjust memory settings if needed
#    - Configure paths if using custom directories

# 3. Never commit the .env file to version control:
#    - It's already in .gitignore
#    - Contains potentially sensitive configuration

# 4. For production deployment:
#    - Enable secure mode
#    - Set appropriate rate limits
#    - Configure proper logging levels
#    - Use environment-specific values

# ============================================================================
# TROUBLESHOOTING
# ============================================================================

# If you encounter memory issues:
# - Set ACCENT_TTS_LOW_MEMORY=true
# - Reduce ACCENT_TTS_BATCH_SIZE to 1
# - Use smaller Whisper model (tiny or base)

# If models fail to load:
# - Check ACCENT_TTS_MODEL_DIR path
# - Ensure sufficient disk space
# - Verify model file integrity

# If audio processing fails:
# - Check FFmpeg installation
# - Verify audio file formats
# - Check file permissions

# If web interface is slow:
# - Enable GPU acceleration
# - Increase ACCENT_TTS_NUM_THREADS
# - Enable model caching
